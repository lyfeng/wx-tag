/* tagSelection.wxss */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #fff;
  padding-bottom: 120rpx;
}

/* 头部 */
.header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  position: relative;
}

.home-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 30rpx;
  background-color: rgba(0,0,0,0.05);
  margin-right: 20rpx;
}

.home-icon {
  font-size: 36rpx;
  line-height: 1;
}

.header-content {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.selected-count {
  font-size: 28rpx;
  color: #4095E5;
}

.share-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 30rpx;
  background-color: rgba(64, 149, 229, 0.1);
  margin-left: 20rpx;
}

.share-icon {
  font-size: 36rpx;
  line-height: 1;
}

/* 被评价用户信息 */
.target-user-info {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #f8f9fa;
  margin: 20rpx;
  border-radius: 20rpx;
}

.target-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.target-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 100rpx;
  color: #999;
  font-size: 28rpx;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4095E5;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 内容区域 */
.content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* 类别滚动 */
.category-scroll {
  white-space: nowrap;
  height: 100rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.category-list {
  display: inline-flex;
  padding: 0 20rpx;
}

.category-item {
  display: inline-block;
  padding: 20rpx 30rpx;
  font-size: 30rpx;
  color: #666;
  position: relative;
}

.category-item.active {
  color: #4095E5;
  font-weight: bold;
}

.category-item.active:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30rpx;
  right: 30rpx;
  height: 6rpx;
  background-color: #4095E5;
  border-radius: 3rpx;
}

/* 标签滚动 */
.tag-scroll {
  flex: 1;
  height: calc(100vh - 100rpx - 120rpx - 100rpx);
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
}

.tag-item {
  margin: 15rpx;
  padding: 16rpx 30rpx;
  border-radius: 30rpx;
  font-size: 30rpx;
  color: #666;
  background-color: #f5f5f5;
  transition: all 0.3s;
}

.tag-item.selected {
  color: #fff;
}

/* 底部按钮 */
.bottom-button-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.submit-button {
  background-color: #4095E5;
  color: white;
  border-radius: 45rpx;
  font-size: 32rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-button[disabled] {
  background-color: #cccccc;
  color: #ffffff;
}

.share-more-button {
  background-color: #f8f9fa;
  color: #4095E5;
  border: 2rpx solid #4095E5;
  border-radius: 45rpx;
  font-size: 30rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
} 