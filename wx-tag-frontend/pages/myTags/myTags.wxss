/* pages/myTags/myTags.wxss */

/* 页面容器 */
.page-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f8f8f8;
}

/* 返回首页按钮 */
.home-button {
  position: fixed;
  top: 60rpx;
  left: 30rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  background-color: rgba(255, 255, 255, 0.9);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.home-icon {
  font-size: 36rpx;
}

.container {
  flex: 1;
  background: #f8f8f8;
  padding-bottom: 120rpx; /* 为底部tabbar留出空间 */
  box-sizing: border-box;
}

/* 加载中 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.weui-loading {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url("data:image/svg+xml;base64,") no-repeat;
  background-size: 100%;
}

@keyframes weuiLoading {
  0% {
    transform: rotate3d(0, 0, 1, 0deg);
  }
  100% {
    transform: rotate3d(0, 0, 1, 360deg);
  }
}

/* 用户个人信息 */
.user-profile {
  padding: 60rpx 30rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}

.large-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  background-color: #f2f2f2;
  margin-bottom: 30rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.tag-stats {
  margin-bottom: 40rpx;
  text-align: center;
}

.stats-text {
  color: #999;
  font-size: 28rpx;
}

.share-btn {
  background-color: #07C160;
  color: white;
  border-radius: 40rpx;
  padding: 16rpx 40rpx;
  font-size: 28rpx;
  border: none;
}

/* 通用区块标题 */
.section-title {
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  background-color: #f8f8f8;
  color: #333;
}

/* 标签排行榜 */
.ranking-section {
  background-color: #fff;
}

.ranking-list {
  background-color: #fff;
}

.ranking-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}

.ranking-item .tag-name {
  font-size: 32rpx;
  color: #333;
  min-width: 120rpx;
}

.tag-progress {
  height: 12rpx;
  background-color: #f2f2f2;
  border-radius: 6rpx;
  flex: 1;
  margin: 0 30rpx;
  position: relative;
  overflow: hidden;
}

.tag-progress-fill {
  position: absolute;
  height: 100%;
  background-color: #07C160;
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.tag-count-text {
  font-size: 28rpx;
  color: #07C160;
  min-width: 80rpx;
  text-align: right;
}

/* AI分析评语 */
.ai-section {
  background-color: #fff;
}

.ai-content {
  padding: 30rpx;
}

.comment-box {
  background-color: #f2f7f2;
  padding: 30rpx;
  border-radius: 16rpx;
  line-height: 1.6;
  font-size: 28rpx;
  color: #333;
}

/* 标签明细 */
.detail-section {
  background-color: #fff;
}

.detail-list {
  background-color: #fff;
}

.detail-item {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.detail-left {
  display: flex;
  align-items: center;
}

.tagger-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background-color: #f2f2f2;
}

.tagger-info {
  display: flex;
  flex-direction: column;
}

.tagger-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.tag-time {
  font-size: 24rpx;
  color: #999;
}

.detail-right {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  justify-content: flex-end;
  max-width: 50%;
}

.tag-pill {
  display: inline-block;
  padding: 6rpx 16rpx;
  background-color: #f2f2f2;
  color: #666;
  border-radius: 20rpx;
  font-size: 22rpx;
  text-align: center;
  white-space: nowrap;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  background-color: #fff;
}

.empty-text-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 80rpx;
}

/* 标签云样式 */
.tag-cloud {
  display: flex;
  flex-wrap: wrap;
  padding: 16rpx 24rpx;
  gap: 10rpx;
  background: #fff;
}

.tag-cloud-item {
  display: flex;
  align-items: center;
  background: #f2f2f2;
  border-radius: 20rpx;
  padding: 6rpx 16rpx;
}

.tag-cloud-name {
  font-size: 22rpx;
  color: #333;
  margin-right: 4rpx;
}

.tag-cloud-count {
  font-size: 22rpx;
  color: #07C160;
} 