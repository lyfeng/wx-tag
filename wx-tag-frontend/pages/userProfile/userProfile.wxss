/* pages/userProfile/userProfile.wxss */
.container {
  min-height: 100vh;
  background-color: #ffffff;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
}

.auth-header {
  text-align: center;
  margin: 60rpx 0;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.auth-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  margin-top: -40rpx;
}

/* 头像授权样式 */
.avatar-btn {
  background: none;
  padding: 0;
  width: 240rpx !important;
  height: 320rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0;
  position: relative;
}

.avatar-btn::after {
  border: none;
}

.avatar-preview {
  width: 240rpx;
  height: 240rpx;
  border-radius: 120rpx;
  border: 4rpx solid #07C160;
  margin-bottom: 20rpx;
  background-color: #f8f8f8;
}

.auth-text {
  font-size: 28rpx;
  color: #07C160;
  font-weight: bold;
}

.auth-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
  padding: 8rpx 24rpx;
  background-color: #f8f8f8;
  border-radius: 24rpx;
}

/* 昵称设置样式 */
.nickname-box {
  width: 100%;
  margin-bottom: 40rpx;
  margin-top: 20rpx;
}

.nickname-input {
  width: 100%;
  height: 88rpx;
  background: #F8F8F8;
  border-radius: 44rpx;
  padding: 0 40rpx;
  font-size: 32rpx;
  color: #333;
  box-sizing: border-box;
}

/* 按钮样式 */
.submit-btn {
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  background: #07C160;
  color: white;
  font-size: 32rpx;
  border-radius: 44rpx;
  font-weight: bold;
  margin-top: 40rpx;
}

.submit-btn.disabled {
  background: #ccc;
  color: #fff;
} 