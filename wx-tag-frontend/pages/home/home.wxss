/* home.wxss */
.container {
  padding: 20rpx;
  background-color: #f8f8f8;
}

/* 用户信息 */
.user-info {
  padding: 30rpx;
  background: #fff;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.avatar-wrapper {
  padding: 0;
  width: 120rpx !important;
  height: 120rpx !important;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: transparent;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.user-info-text {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.nickname-input {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  padding: 4rpx 0;
}

.tag-count-text {
  font-size: 28rpx;
  color: #666;
}

/* 按钮行容器 */
.button-row {
  display: flex;
  margin: 40rpx 20rpx;
  gap: 20rpx;
}

/* 邀请按钮 */
.invite-button {
  flex: 1;
  background-color: #07C160;
  color: white;
  font-weight: bold;
  padding: 24rpx 0;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
}

/* 给自己打标签按钮 */
.self-tag-button {
  flex: 1;
  background-color: #07C160;
  color: white;
  font-weight: bold;
  padding: 24rpx 0;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
}

/* 功能卡片 */
.action-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.action-item {
  display: flex;
  align-items: center;
  padding: 40rpx;
  position: relative;
}

.action-item:not(:last-child)::after {
  content: '';
  position: absolute;
  left: 40rpx;
  right: 40rpx;
  bottom: 0;
  height: 1px;
  background-color: rgba(0,0,0,0.1);
}

.action-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 28rpx;
  margin-right: 30rpx;
}

.action-text {
  flex: 1;
  font-size: 32rpx;
}

.action-arrow {
  color: #999;
  font-size: 32rpx;
}

/* 卡片通用样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.card-header {
  padding: 30rpx;
  border-bottom: 1px solid rgba(0,0,0,0.1);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
}

/* 标签预览 */
.tag-preview {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 30rpx;
}

.mini-tag {
  padding: 10rpx 20rpx;
  background-color: #f2f2f2;
  border-radius: 24rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

.mini-tag .tag-count {
  color: #07C160;
  margin-left: 8rpx;
}

/* 空标签提示 */
.empty-tags-tip {
  padding: 30rpx;
  text-align: center;
}

.empty-tip-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
  display: block;
}

.empty-invite-btn {
  background-color: #07C160;
  color: white;
  font-size: 28rpx;
  padding: 16rpx 60rpx;
  border-radius: 8rpx;
  display: inline-block;
  margin-top: 10rpx;
}

/* AI评语 */
.comment-box {
  padding: 30rpx;
}

.countdown-content {
  text-align: center;
}

.countdown-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.countdown-time {
  font-size: 40rpx;
  font-weight: bold;
  color: #07C160;
  margin-bottom: 20rpx;
  display: block;
}

.countdown-tip {
  font-size: 24rpx;
  color: #999;
}

.generate-content {
  text-align: center;
}

/* 评价人数不足提示样式 */
.insufficient-tips {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #FFF9F2;
  border-radius: 8rpx;
}

.tips-text {
  font-size: 24rpx;
  color: #FF9500;
  line-height: 1.5;
}

.generate-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 30rpx;
  display: block;
}

.generate-btn {
  background-color: #07C160;
  color: white;
  font-size: 28rpx;
  padding: 16rpx 60rpx;
  border-radius: 8rpx;
  display: inline-block;
}

.comment-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

/* 分享弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 1;
  transition: opacity 0.3s ease;
}

.modal.closing {
  opacity: 0;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.6);
}

.modal-content {
  position: relative;
  background-color: #fff;
  border-radius: 24rpx;
  padding: 40rpx 40rpx 50rpx;
  z-index: 10000;
  width: 80%;
  max-width: 550rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
  transform: scale(1);
  transition: transform 0.3s ease;
}

.closing .modal-content {
  transform: scale(0.9);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.close-icon {
  width: 60rpx;
  height: 60rpx;
  font-size: 48rpx;
  text-align: center;
  line-height: 60rpx;
  color: #999;
  border-radius: 50%;
}

.close-icon:active {
  background-color: #f0f0f0;
}

.share-tip {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 30rpx;
  display: block;
  text-align: center;
}

.share-buttons {
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
  margin-bottom: 30rpx;
}

.share-btn {
  background: none !important;
  padding: 0 !important;
  margin: 0 !important;
  line-height: 1 !important;
  border: none !important;
  width: 240rpx !important;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.share-btn::after {
  border: none;
}

.wechat-circle {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 25rpx;
  box-shadow: 0 6rpx 15rpx rgba(7, 193, 96, 0.3);
  transition: all 0.2s;
  background-color: #07C160;
}

.copy-circle {
  background-color: #4095E5;
}

.share-btn:active .wechat-circle {
  transform: scale(0.95);
  box-shadow: 0 3rpx 8rpx rgba(7, 193, 96, 0.3);
}

.btn-text {
  color: white;
  font-size: 34rpx;
  font-weight: bold;
}

.btn-label {
  font-size: 30rpx;
  color: #333;
  display: block;
  text-align: center;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 100rpx;
  color: #999;
  font-size: 28rpx;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4095E5;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 标题行 */
.title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.view-more {
  font-size: 28rpx;
  color: #4095E5;
}

/* 标签云 */
.tag-cloud {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 40rpx;
}

.tag-item {
  margin: 10rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  color: white;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.tag-count {
  margin-left: 10rpx;
  background-color: rgba(255, 255, 255, 0.3);
  padding: 2rpx 12rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* AI分析 */
.analysis-container {
  background-color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-top: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.analysis-content {
  display: flex;
  margin-top: 20rpx;
}

.ai-icon {
  width: 80rpx;
  height: 80rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.analysis-text {
  flex: 1;
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 34rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.empty-tip {
  font-size: 28rpx;
  color: #999;
}

/* 底部按钮 */
.bottom-button-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.button-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

/* 广告容器 */
.ad-container {
  margin: 30rpx 0;
  padding: 0 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.ad-container ad {
  width: 100%;
  border-radius: 16rpx;
  overflow: hidden;
} 