/* pages/friendDetail/friendDetail.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
}

.page-header {
  padding: 30rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  background-color: #fff;
  border-bottom: 1px solid rgba(0,0,0,0.1);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.home-button {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 30rpx;
  background-color: rgba(0,0,0,0.05);
}

.home-icon {
  font-size: 32rpx;
  line-height: 1;
}

.header-title {
  flex: 1;
}

/* 用户资料 */
.user-profile {
  margin-top: 16rpx;
  padding: 32rpx 24rpx 24rpx 24rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 1px solid rgba(0,0,0,0.05);
}

.large-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  margin-bottom: 18rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.tag-stats {
  margin-top: 8rpx;
  text-align: center;
}

.stats-text {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 4rpx;
}

.tag-count {
  color: #07C160;
}

.action-button {
  background-color: #07C160;
  color: white;
  border-radius: 40rpx;
  padding: 16rpx 40rpx;
  margin-top: 40rpx;
  font-size: 28rpx;
  border: none;
}

/* 标签列表 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #222;
  padding: 0;
  margin: 0 0 20rpx 0;
  background: none;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx 16rpx;
  background: #fff;
  border-radius: 18rpx;
  padding: 10rpx 0 0 0;
  margin-bottom: 32rpx;
  margin-top: 0;
}

.tag-item-bubble {
  display: flex;
  align-items: center;
  background: #f6f7f8;
  border-radius: 18rpx;
  padding: 8rpx 22rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #222;
}

.bubble-name {
  color: #222;
  font-weight: 400;
}

.bubble-count {
  margin-left: 8rpx;
  font-size: 24rpx;
  color: #07C160;
  background: #fff;
  border-radius: 12rpx;
  padding: 0 10rpx;
  font-weight: 500;
  min-width: 28rpx;
  text-align: center;
  box-sizing: border-box;
  line-height: 1.6;
}

/* 标签总览 */
.tag-overview {
  background-color: #fff;
}

.tag-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid rgba(0,0,0,0.05);
}

.tag-overview .tag-name {
  font-size: 28rpx;
  color: #333;
}

.tag-count-text {
  color: #07C160;
  font-size: 24rpx;
}

/* AI评语 */
.comment-box {
  background: #fff;
  border-radius: 18rpx;
  padding: 30rpx;
  margin-bottom: 32rpx;
  margin-top: 0;
}

.comment-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

/* 加载中 */
.loading-container {
  padding: 60rpx;
  text-align: center;
}

.loading {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #07C160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 加载中 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
}

/* 用户信息 */
.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

/* AI分析 */
.analysis-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.refresh-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
}

.refresh-icon {
  width: 32rpx;
  height: 32rpx;
}

.analysis-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.no-analysis {
  color: #999;
  font-size: 24rpx;
}

/* 标签统计 */
.stats-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.stats-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.tag-name {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  color: #fff;
  font-size: 28rpx;
}

.tag-count {
  font-size: 24rpx;
  color: #666;
}

/* 收到的标签 */
.received-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.received-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.received-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.tagger-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.tagger-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.tagger-name {
  font-size: 28rpx;
  color: #333;
}

.tag-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 10rpx;
}

.tag-time {
  font-size: 24rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 24rpx;
  color: #999;
}

/* 操作按钮 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.action-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
}

/* 空状态样式 */
.empty-tags {
  text-align: center;
  padding: 60rpx 30rpx;
  color: #999;
  font-size: 24rpx;
}

.ranking-section {
  background-color: #fff;
}

.ranking-list {
  background-color: #fff;
}

.ranking-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}

.ranking-item .tag-name {
  font-size: 28rpx;
  color: #333;
  min-width: 120rpx;
}

.tag-progress {
  height: 12rpx;
  background-color: #f2f2f2;
  border-radius: 6rpx;
  flex: 1;
  margin: 0 30rpx;
  position: relative;
  overflow: hidden;
}

.tag-progress-fill {
  position: absolute;
  height: 100%;
  background-color: #07C160;
  border-radius: 6rpx;
  transition: width 0.3s ease;
} 