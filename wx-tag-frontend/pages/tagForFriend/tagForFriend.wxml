<!--pages/tagForFriend/tagForFriend.wxml-->
<view class="container">
  <!-- 返回首页按钮 -->
  <view class="home-button" bindtap="goHome">
    <text class="home-icon">🏠</text>
  </view>
  
  <view class="content">
    <!-- 加载中状态 -->
    <view class="loading-container" wx:if="{{friendOpenId && !friendInfo.nickname}}">
      <view class="loading"></view>
      <text class="loading-text">正在获取朋友信息...</text>
    </view>
    
    <!-- 朋友信息 -->
    <view class="friend-info" wx:elif="{{friendInfo.nickname}}">
      <image class="friend-avatar" 
             src="{{friendInfo.avatarUrl || '/images/empty.png'}}" 
             mode="aspectFill"></image>
      <text class="friend-name">{{friendInfo.nickname}}</text>
      <text class="loading-text">正在跳转到详情页面...</text>
    </view>
    
    <!-- 默认状态 -->
    <view class="default-content" wx:else>
      <text class="page-title">为朋友贴标签</text>
      <text class="page-desc">正在处理页面参数...</text>
    </view>
  </view>
</view>