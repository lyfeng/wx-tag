/* pages/inviteTasks/inviteTasks.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
}

.page-header {
  padding: 30rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  background-color: #fff;
  border-bottom: 1px solid rgba(0,0,0,0.1);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.home-button {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 30rpx;
  background-color: rgba(0,0,0,0.05);
}

.home-icon {
  font-size: 36rpx;
  line-height: 1;
}

.header-title {
  flex: 1;
}

.content-area {
  margin-top: 98rpx;
  padding-bottom: 30rpx;
}

.section-title {
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  background-color: #f8f8f8;
}

/* 任务卡片 */
.task-card {
  margin: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.task-header {
  padding: 30rpx;
  border-bottom: 1px solid rgba(0,0,0,0.05);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.task-title {
  font-size: 32rpx;
  font-weight: bold;
}

.task-status {
  font-size: 28rpx;
}

.status-active {
  color: #07C160;
}

.status-completed {
  color: #999;
}

.task-body {
  padding: 30rpx;
}

.task-detail {
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}

.task-detail-label {
  color: #999;
}

.progress-bar {
  height: 12rpx;
  background-color: #f2f2f2;
  border-radius: 6rpx;
  margin: 30rpx 0;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #07C160;
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.task-footer {
  padding: 30rpx;
  border-top: 1px solid rgba(0,0,0,0.05);
  display: flex;
  justify-content: space-between;
}

.task-action {
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  background-color: #f2f2f2;
  font-size: 28rpx;
}

.action-primary {
  background-color: #07C160;
  color: white;
}

/* 空状态 */
.empty-state {
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.create-task-btn {
  background-color: #07C160;
  color: white;
  font-size: 28rpx;
  padding: 16rpx 60rpx;
  border-radius: 8rpx;
  display: inline-block;
}

/* 加载中 */
.loading-container {
  padding: 60rpx;
  text-align: center;
}

.loading {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #07C160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 分享弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.6);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 40rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
}

.close-icon {
  width: 40rpx;
  height: 40rpx;
}

.share-tip {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
  display: block;
}

.share-buttons {
  display: flex;
  justify-content: space-around;
}

.share-btn {
  background: none;
  padding: 0;
  margin: 0;
  line-height: 1;
  border: none;
  width: auto;
}

.share-btn::after {
  display: none;
}

.share-btn image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 16rpx;
}

.share-btn text {
  font-size: 24rpx;
  color: #333;
  display: block;
  text-align: center;
}

/* 标签页 */
.tabs {
  display: flex;
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #07c160;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #07c160;
  border-radius: 2rpx;
}

/* 邀请列表 */
.invitation-list {
  margin-bottom: 120rpx;
}

.invitation-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.invitation-info {
  margin-bottom: 20rpx;
}

.invitation-code {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.invitation-time {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.participant-count {
  font-size: 28rpx;
  color: #666;
}

.invitation-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  border-radius: 32rpx;
  font-size: 28rpx;
  border: none;
}

.action-btn.share {
  background: #07c160;
  color: #fff;
}

.action-btn.close {
  background: #f5f5f5;
  color: #666;
}

.action-btn.delete {
  background: #ff4d4f;
  color: #fff;
}

/* 创建按钮 */
.create-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background: #07c160;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.create-icon {
  width: 40rpx;
  height: 40rpx;
}

.share-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.share-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.share-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: none;
}

.close-btn {
  margin-top: 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
} 