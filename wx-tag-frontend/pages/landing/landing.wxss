.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #4095E5 0%, #5ba3f5 100%);
  padding: 0;
  display: flex;
  flex-direction: column;
}

/* 头部样式 */
.header {
  background: linear-gradient(135deg, #4095E5 0%, #5ba3f5 100%);
  padding: 80rpx 40rpx 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.title-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
}

.main-title {
  font-size: 56rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.sub-title {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 300;
}

.avatar-container {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  background: rgba(255, 255, 255, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.header-avatar {
  font-size: 60rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 记录容器 */
.records-container {
  flex: 1;
  background-color: #f8f8f8;
  border-radius: 40rpx 40rpx 0 0;
  margin-top: -20rpx;
  padding: 50rpx 30rpx 30rpx;
  min-height: 600rpx;
}

.section-title {
  text-align: center;
  margin-bottom: 40rpx;
}

.title-text {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle-text {
  font-size: 24rpx;
  color: #999;
}

/* 记录项样式 */
.record-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.record-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: linear-gradient(45deg, #4095E5, #5ba3f5);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: white;
  margin-right: 20rpx;
  font-weight: 500;
}

.username {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.record-content {
  padding-left: 80rpx;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.tag-item {
  background-color: #4095E5;
  color: white;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.record-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  font-weight: 400;
}

/* 按钮容器 */
.action-container {
  padding: 40rpx;
  background-color: #f8f8f8;
}

.start-button {
  width: 100%;
  height: 100rpx;
  background-color: #07C160;
  color: white;
  border-radius: 50rpx;
  border: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.3);
  position: relative;
  overflow: hidden;
}

.start-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.start-button:active::before {
  left: 100%;
}

.start-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 12rpx rgba(7, 193, 96, 0.3);
}

.button-text {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.button-subtitle {
  font-size: 22rpx;
  opacity: 0.9;
  font-weight: 300;
}