.container {
  min-height: 100vh;
  background-color: #f8f8f8;
}

.page-header {
  padding: 30rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  background-color: #fff;
  border-bottom: 1px solid rgba(0,0,0,0.1);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.home-button {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 30rpx;
  background-color: rgba(0,0,0,0.05);
}

.home-icon {
  font-size: 36rpx;
  line-height: 1;
}

.header-title {
  flex: 1;
}

.content-area {
  margin-top: 98rpx;
  padding-bottom: 30rpx;
}

.section-title {
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  background-color: #f8f8f8;
}

/* 好友列表 */
.user-row {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1px solid rgba(0,0,0,0.05);
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  margin-right: 30rpx;
}

.user-avatar-text {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  margin-right: 30rpx;
  background-color: #e0e0e0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  color: #666;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-tags {
  display: flex;
  flex-wrap: wrap;
}

.mini-tag {
  padding: 6rpx 16rpx;
  background-color: #f2f2f2;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  color: #666;
}

.arrow {
  color: #999;
  font-size: 32rpx;
}

/* 加载中 */
.loading-container {
  padding: 60rpx;
  text-align: center;
}

.loading {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #07C160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态 */
.empty-state {
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  color: #cccccc;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
} 