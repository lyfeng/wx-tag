/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100vh;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  background-color: #f8f8f8;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 32rpx;
  color: #666;
}

.login-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-btn {
  width: 85%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #4095E5;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  margin-bottom: 30rpx;
  transition: background-color 0.3s;
  border: none;
  outline: none;
  position: relative;
  overflow: hidden;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  background-color: #3a7bc8;
  transform: scale(0.98);
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

/* 用户协议相关样式 */
.agreement-container {
  width: 85%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.checkbox-container {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 10rpx;
}

.checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  transition: all 0.3s;
}

.checkbox.checked {
  background-color: #4095E5;
  border-color: #4095E5;
}

.checkmark {
  color: #fff;
  font-size: 20rpx;
  font-weight: bold;
}

.agreement-text {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

.action-buttons {
  display: flex;
  justify-content: center;
  width: 100%;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
  border-radius: 20rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  margin-top: 10rpx;
}

.cancel-btn::after {
  border: none;
}

.footer {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 40rpx;
  text-align: center;
}

/* 返回首页按钮 */
.home-button {
  position: absolute;
  top: 60rpx;
  left: 30rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  background-color: rgba(255, 255, 255, 0.9);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.home-icon {
  font-size: 36rpx;
}