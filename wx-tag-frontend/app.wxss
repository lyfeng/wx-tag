.tab-bar {
  padding: 4px 0;
}

.tab-icon {
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
}

.tab-bar-text {
  font-size: 16px;
  line-height: 1.2;
  color: #333;
}

.tab-bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 2px;
}

