.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 48px;
  background: white;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 2px;
}

.tab-icon {
  width: 20px;
  height: 20px;
  color: #999999;
}

.active .tab-icon {
  color: #4095E5;
}

.tab-bar-text {
  font-size: 16px;
  line-height: 1.2;
  color: #999999;
}

.active .tab-bar-text {
  color: #4095E5;
}

